<UserControl x:Class="ErgoDoxModConfig.KeyViewModifier"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:diag="clr-namespace:System.Diagnostics;assembly=WindowsBase"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Canvas>
        <Button Content="{Binding Text}" Width="{Binding Width}" Height="{Binding Height}" LayoutTransform="{Binding Transform}" Background="Aqua" Canvas.Left="{Binding Left}" Canvas.Top="{Binding Top}" ContextMenu="{StaticResource KeyContextMenu}"/>
    </Canvas>
</UserControl>